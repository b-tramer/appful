<h3>All Users</h3>

<ul class="users-list">
  <%@users.each do |user| %>
  <li>
    <%= user.username %> <%= user.email %>

    <% if current_user.admin? %>
      <% if user.admin? %>
        (Admin)
      <% else %>
        <%= button_to "Make Admin", { action: "make_admin", id: user.id }, method: :put %>
      <% end %>
      <%= button_to "Delete", user, method: :delete, data: { confirm: "Are you sure?"} %>

    <% end %>

    </li>
  <% end %>
</ul>
